@model IEnumerable<FinanWebApp.Models.ListUserRoleViewModel>

@{
    ViewBag.Title = "Usuarios - Roles";
}

<h2>@ViewBag.Title</h2>

<p class="text-danger">@ViewBag.StatusMessage</p>

<p>
    @Html.ActionLink("Asignar rol", "Create") | 
    @Html.ActionLink("Volver", "Index", "Manage")
</p>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.UserId)</th>
        <th>@Html.DisplayNameFor(model => model.RoleId)</th>
        <th>Acciones</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.HiddenFor(modelItem => item.UserId)
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.HiddenFor(modelItem => item.RoleId)
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Eliminar", "Delete", new { uid = item.UserId, rid = item.RoleId })
        </td>
    </tr>
}

</table>
